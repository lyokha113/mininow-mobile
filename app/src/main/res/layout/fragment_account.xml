<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:weightSum="100"
                android:orientation="vertical"
                android:background="@color/colorRed">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:weightSum="100"
                android:paddingRight="42dp"
                android:paddingLeft="42dp"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/custom_name_info"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="35"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|bottom"
                    android:text="name"
                    android:textSize="22sp"
                    android:layout_marginBottom="20dp"/>


                <TextView
                    android:id="@+id/change_info"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="14"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/rectangle_over_border_black"
                    android:text="Đổi thông tin"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:layout_marginBottom="20dp"
                    />

                <!--<TextView-->
                    <!--android:id="@+id/change_password"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0dp"-->
                    <!--android:layout_weight="14"-->
                    <!--android:textColor="@color/colorBlack"-->
                    <!--android:background="@drawable/rectangle_over_border_black"-->
                    <!--android:text="Đổi mật khẩu"-->
                    <!--android:gravity="center"-->
                    <!--android:textSize="22sp"-->
                    <!--android:layout_marginBottom="20dp"/>-->

                <TextView
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="14"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/rectangle_over_border_black"
                    android:text="Đăng xuất"
                    android:gravity="center"
                    android:textSize="22sp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/over_background"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp">
            <ImageView
                android:id="@+id/custom_img_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>